    set(TOO_BUILD_UNITTESTS OFF CACHE BOOL "do not change for android" FORCE)
    set(CMAKE_MAKE_PROGRAM "$ENV{ANDROID_NDK}/prebuilt/windows/bin/make.exe" CACHE STRING "" FORCE)
